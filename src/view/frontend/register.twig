{% block title %} Billet simple pour L\'alaska - Login {% endblock %}

{% extends '/frontend/template.twig' %}

{% block content %}
    <main class="white-background">
        <h2 class="general-padding">Création d'un compte</h2>
        <p class="general-padding no-margin"><a href="index.php">Retour à la liste des billets</a></p>
        <form action="index.php?action=checkRegister" method="post" class="general-padding text-center">
            <label for="pseudo">Identifiant:</label>
            <br>
            <input type="text" id="pseudo" name="pseudo" required="required">
            <br>
            <label for="password">Mot de passe:</label>
            <br>
            <input type="password" id="password" name="password" pattern=".{6,}" title="6 caractères minimum" required="required">
            <br>
            <label for="password2">Mot de passe:</label>
            <br>
            <input type="password" id="password2" name="password2" required="required">
            <br>
            <label for="email">Adresse E-Mail:</label>
            <br>
            <input type="email" id="email" name="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" title="exemple d'email: exemple@exemple.com" required="required">
            <br>
            <input type="submit" value="S'inscrire">
        </form>
    </main>
{% endblock %}
